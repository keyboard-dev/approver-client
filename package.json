{
  "name": "keyboard-approver App",
  "version": "0.1.6",
  "description": "Desktop notification app for MCP approval workflow",
  "main": "dist/main.js",
  "author": "keyboard.dev team",
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc --watch",
    "build:renderer": "vite build",
    "dev:renderer": "vite --host",
    "start": "electron-forge start",
    "dev": "npm run build && npm run copy-assets && electron dist/main.js --dev",
    "copy-assets": "cp -r assets dist/",
    "build-mac": "npm run build && electron-builder --mac",
    "build-mac-forge": "npm run build && electron-forge make --platform=darwin",
    "build-signed": "npm run build && electron-forge make --platform=darwin",
    "build-mac-universal": "npm run build && electron-forge make --platform=darwin --arch=universal",
    "build-signed-bg": "nohup npm run build-signed > build.log 2>&1 &",
    "build-signed-ci": "dotenvx run -f .env.ci -- npm run build-signed",
    "build-dev": "NODE_ENV=development npm run build && SKIP_SIGNING=true electron-forge package --platform=darwin",
    "check-build": "tail -f build.log",
    "build-win": "npm run build && electron-builder --win",
    "build-linux": "npm run build && electron-builder --linux",
    "check-certificates": "node scripts/check-certificates.js",
    "test-client": "node test-client.js",
    "test-approval": "node test-approval-client.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "encrypt-keys": "npx @dotenvx/dotenvx encrypt",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.45.2",
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^22.0.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@typeform/embed-react": "^4.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "jose": "^6.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.515.0",
    "monaco-themes": "^0.4.6",
    "node-notifier": "^10.0.1",
    "octokit": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-use": "^17.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.14.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^3.0.1",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@shadcn/ui": "^0.0.4",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.22",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/ws": "^8.5.9",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.1.7"
  },
  "overrides": {
    "prismjs": "^1.30.0"
  },
  "build": {
    "appId": "dev.keyboard.desktop",
    "productName": "Keyboard Approver",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/keyboard-dock.icns"
    },
    "win": {
      "icon": "assets/keyboard-dock.icns"
    },
    "linux": {
      "icon": "assets/keyboard-dock.icns"
    }
  }
}
